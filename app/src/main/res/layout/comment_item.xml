<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stork"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:background="@drawable/shape"
            android:layout_marginStart="15dp" android:layout_marginTop="10dp"
            android:id="@+id/accountImg"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:id="@+id/userName"
            android:layout_alignTop="@+id/accountImg"
            android:layout_toEndOf="@+id/accountImg"
            android:layout_marginTop="15dp"/>
    <TextView
            android:text="发表内容展示"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/articleComment"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/accountImg"
            android:layout_alignStart="@+id/accountImg"/>

</RelativeLayout>